# ===========================
# tomchat-v2 — Example .env
# Concrete sample values (non-secret) for local dev
# ===========================

# Runtime
NODE_ENV=development
PORT=3000
# one of: fatal|error|warn|info|debug|trace|silent
LOG_LEVEL=info

# Database & Cache (REQUIRED)
DATABASE_URL=postgresql://tom:tom@localhost:5432/tomchat_v2
REDIS_URL=redis://localhost:6379
REDIS_TTL=1800

# OpenAI (REQUIRED)
# Use a non-sensitive sample key format for local dev only.
OPENAI_API_KEY=sk-local-example-1234567890abcdef
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.3

# WhatsApp (REQUIRED)
WHATSAPP_VERIFY_TOKEN=tom–verify–123
WHATSAPP_PHONE_NUMBER_ID=1234567890
WHATSAPP_ACCESS_TOKEN=EAAGm0PX4ZCpsBAKZClZC
WHATSAPP_APP_SECRET=appsecret_local_3f5e9d

# Global Timezone
TIMEZONE=Europe/Rome

# Queue & Retries
QUEUE_CONCURRENCY=5
QUEUE_MAX_ATTEMPTS=3

# Feature flags
ENABLE_CALENDAR=false
ENABLE_ANALYTICS=false
